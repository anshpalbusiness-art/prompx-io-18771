{
    "name": "promptx-app",
    "version": "1.0.0",
    "description": "PromptX - AI Prompt Engineering Platform (Desktop App)",
    "main": "electron-main.js",
    "author": "PromptX",
    "license": "MIT",
    "scripts": {
        "dev": "electron .",
        "build": "electron-builder",
        "build:mac": "electron-builder --mac",
        "build:win": "electron-builder --win",
        "build:linux": "electron-builder --linux"
    },
    "dependencies": {
        "electron-updater": "^6.3.0"
    },
    "devDependencies": {
        "electron": "^33.0.0",
        "electron-builder": "^25.1.0"
    },
    "build": {
        "appId": "com.promptx.app",
        "productName": "PromptX",
        "directories": {
            "output": "release"
        },
        "files": [
            "electron-main.js",
            "electron-preload.js",
            "dist/**/*"
        ],
        "extraResources": [
            {
                "from": "../.env",
                "to": ".env"
            }
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ],
            "icon": "../public/icon-512x512.png"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "../public/icon-512x512.png"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "../public/icon-512x512.png",
            "category": "Utility"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true
        }
    }
}